using UnityEngine;
using TMPro;

public class UIManager : MonoBehaviour
{
    public TMP_Text feedbackText; // Texto para mostrar retroalimentación
    public TMP_Text difficultyText; // Texto para mostrar dificultad
    private float difficulty = 1.0f; // Dificultad inicial

    void Start()
    {
        if (feedbackText == null || difficultyText == null)
        {
            Debug.LogError("Asigna los campos de texto en el Inspector.");
        }
        UpdateUI("¡Prepárate para el combate!");
    }

    public void UpdateUI(string feedback)
    {
        feedbackText.text = feedback;
        difficultyText.text = "Dificultad: " + difficulty.ToString("F1");
    }

    public void IncreaseDifficulty()
    {
        difficulty += 0.1f;
        UpdateUI("¡Buen trabajo! Dificultad aumentada.");
    }

    public void ResetDifficulty()
    {
        difficulty = 1.0f;
        UpdateUI("¡Combate reiniciado!");
    }
}
