    <div class="container">
        <!-- Header -->
        <header>
            <h1><i class="fas fa-globe"></i> English Learning App</h1>
            <p class="subtitle">Aprende inglés de manera divertida y efectiva</p>
        </header>
        <!-- Levels Selection -->
        <section class="levels-section" id="levelsSection">
            <div class="level-card" onclick="selectLevel('basico')">
                <div class="level-icon"><i class="fas fa-seedling"></i></div>
                <h2 class="level-title">Básico</h2>
                <p class="level-description">Comienza tu viaje aprendiendo lo esencial: vocabulario básico, frases comunes y pronunciación.</p>
            </div>
            <div class="level-card" onclick="selectLevel('intermedio')">
                <div class="level-icon"><i class="fas fa-book-open"></i></div>
                <h2 class="level-title">Intermedio</h2>
                <p class="level-description">Mejora tus habilidades con gramática más compleja, comprensión auditiva y conversaciones.</p>
            </div>
            <div class="level-card" onclick="selectLevel('avanzado')">
                <div class="level-icon"><i class="fas fa-graduation-cap"></i></div>
                <h2 class="level-title">Avanzado</h2>
                <p class="level-description">Domina el idioma con expresiones idiomáticas, lectura de textos complejos y escritura profesional.</p>
            </div>
        </section>
        <!-- Main Content Area -->
        <div class="main-content" id="mainContent">
            <h2 id="currentLevelTitle">Nivel Básico</h2>
            <!-- Tools Section -->
            <div class="tool-buttons">
                <button class="tool-btn" onclick="showTool('listen')">
                    <i class="fas fa-headphones"></i> Escuchar
                </button>
                <button class="tool-btn" onclick="showTool('speak')">
                    <i class="fas fa-microphone"></i> Pronunciar
                </button>
                <button class="tool-btn" onclick="showTool('read')">
                    <i class="fas fa-book"></i> Leer
                </button>
                <button class="tool-btn" onclick="showTool('write')">
                    <i class="fas fa-pen"></i> Escribir
                </button>
            </div>
            <!-- Content Area for Tools -->
            <div class="content-area" id="contentArea">
                <div class="welcome-message">
                    <h3>Bienvenido al Nivel Básico!</h3>
                    <p>Selecciona una herramienta para comenzar tu aprendizaje:</p>
                    <ul style="margin-top: 20px; list-style-type: none;">
                        <li><i class="fas fa-check-circle" style="color: #28a745;"></i> Escucha palabras y frases</li>
                        <li><i class="fas fa-check-circle" style="color: #28a745;"></i> Practica tu pronunciación</li>
                        <li><i class="fas fa-check-circle" style="color: #28a745;"></i> Lee textos sencillos</li>
                        <li><i class="fas fa-check-circle" style="color: #28a745;"></i> Escribe oraciones básicas</li>
                    </ul>
                </div>
            </div>
            <!-- Games Section -->
            <div class="games-section" id="gamesSection">
                <h3>Juegos Educativos</h3>
                <div class="game-container">
                    <div class="game-card" onclick="startGame('matching')">
                        <div class="game-icon"><i class="fas fa-exchange-alt"></i></div>
                        <h4>Emparejar Palabras</h4>
                        <p>Une palabras en inglés con sus traducciones</p>
                    </div>
                    <div class="game-card" onclick="startGame('quiz')">
                        <div class="game-icon"><i class="fas fa-question-circle"></i></div>
                        <h4>Cuestionario Rápido</h4>
                        <p>Prueba tus conocimientos con preguntas rápidas</p>
                    </div>
                    <div class="game-card" onclick="startGame('spelling')">
                        <div class="game-icon"><i class="fas fa-spell-check"></i></div>
                        <h4>Ortografía</h4>
                        <p>Escribe correctamente las palabras que escuchas</p>
                    </div>
                </div>
            </div>
            <!-- Progress Section -->
            <div class="progress-section" id="progressSection">
                <h3>Tu Progreso</h3>
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <p id="progressText">Progreso: 0%</p>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value" id="wordsLearned">0</div>
                        <div class="stat-label">Palabras Aprendidas</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="exercisesCompleted">0</div>
                        <div class="stat-label">Ejercicios Completados</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="accuracy">0%</div>
                        <div class="stat-label">Precisión</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="streak">0</div>
                        <div class="stat-label">Racha Diaria</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Datos de ejemplo por nivel
        const levelData = {
            basico: {
                words: ['hello', 'goodbye', 'thank you', 'please', 'yes', 'no'],
                meanings: ['hola', 'adiós', 'gracias', 'por favor', 'sí', 'no'],
                sentences: [
                    {english: "Hello, how are you?", spanish: "Hola, ¿cómo estás?"},
                    {english: "Thank you very much.", spanish: "Muchas gracias."},
                    {english: "Please sit down.", spanish: "Por favor siéntate."}
                ],
                writingPrompts: [
                    "Write about your family",
                    "Describe your favorite food",
                    "Write about your daily routine"
                ]
            },
            intermedio: {
                words: ['conversation', 'experience', 'opportunity', 'challenge', 'achievement', 'responsibility'],
                meanings: ['conversación', 'experiencia', 'oportunidad', 'desafío', 'logro', 'responsabilidad'],
                sentences: [
                    {english: "We had an interesting conversation about art.", spanish: "Tuvimos una conversación interesante sobre arte."},
                    {english: "This job offers great opportunities for growth.", spanish: "Este trabajo ofrece grandes oportunidades de crecimiento."},
                    {english: "Learning a new language is both challenging and rewarding.", spanish: "Aprender un nuevo idioma es tanto desafiante como gratificante."}
                ],
                writingPrompts: [
                    "Write an email to a friend about your vacation",
                    "Describe a difficult situation you overcame",
                    "Write about your career goals"
                ]
            },
            avanzado: {
                words: ['phenomenon', 'controversy', 'perspective', 'endeavor', 'intricate', 'ubiquitous'],
                meanings: ['fenómeno', 'controversia', 'perspectiva', 'esfuerzo', 'intricado', 'ubícuo'],
                sentences: [
                    {english: "The phenomenon of climate change affects every aspect of our lives.", spanish: "El fenómeno del cambio climático afecta todos los aspectos de nuestras vidas."},
                    {english: "There is ongoing controversy regarding the new policy.", spanish: "Existe controversia continua respecto a la nueva política."},
                    {english: "From my perspective, we should consider all options carefully.", spanish: "Desde mi perspectiva, deberíamos considerar todas las opciones cuidadosamente."}
                ],
                writingPrompts: [
                    "Write an opinion essay on current social issues",
                    "Compose a formal business proposal",
                    "Create a persuasive speech on environmental conservation"
                ]
            }
        };
        let currentLevel = '';
        let progress = {
            wordsLearned: 0,
            exercisesCompleted: 0,
            accuracy: 0,
            streak: 0
        };
        function selectLevel(level) {
            currentLevel = level;
            document.getElementById('levelsSection').style.display = 'none';
            document.getElementById('mainContent').style.display = 'block';
            const levelNames = {
                basico: 'Básico',
                intermedio: 'Intermedio',
                avanzado: 'Avanzado'
            };
            document.getElementById('currentLevelTitle').textContent = `Nivel ${levelNames[level]}`;
            updateProgress();
        }
        function showTool(tool) {
            const contentArea = document.getElementById('contentArea');
            contentArea.innerHTML = '';
            switch(tool) {
                case 'listen':
                    showListenTool();
                    break;
                case 'speak':
                    showSpeakTool();
                    break;
                case 'read':
                    showReadTool();
                    break;
                case 'write':
                    showWriteTool();
                    break;
            }
            // Mostrar sección de juegos después de seleccionar una herramienta
            setTimeout(() => {
                document.getElementById('gamesSection').style.display = 'block';
            }, 500);
            // Mostrar sección de progreso después de algunos segundos
            setTimeout(() => {
                document.getElementById('progressSection').style.display = 'block';
            }, 1000);
        }
        function showListenTool() {
            const data = levelData[currentLevel];
            const randomIndex = Math.floor(Math.random() * data.words.length);
            const word = data.words[randomIndex];
            const meaning = data.meanings[randomIndex];
            const listenHTML = `
                <div class="listen-tool">
                    <h3>Escucha y Aprende</h3>
                    <div class="word-display">${word}</div>
                    <audio controls class="audio-player">
                        <source src="https://ssl.gstatic.com/dictionary/static/sounds/de/0/${word}.mp3" type="audio/mpeg">
                        Tu navegador no soporta audio.
                    </audio>
                    <div class="meaning">
                        <strong>Significado:</strong> ${meaning}
                    </div>
                    <button class="tool-btn" onclick="nextWord()">
                        <i class="fas fa-forward"></i> Siguiente Palabra
                    </button>
                </div>
            `;
            document.getElementById('contentArea').innerHTML = listenHTML;
        }
        function showSpeakTool() {
            const speakHTML = `
                <div class="speak-tool">
                    <h3>Pronuncia la Palabra</h3>
                    <p>Presiona el micrófono y di aloud la palabra que aparece</p>
                    <div class="word-display" id="speakWord">hello</div>
                    <button class="mic-button" onclick="startRecording()">
                        <i class="fas fa-microphone"></i>
                    </button>
                    <div id="recordingFeedback"></div>
                    <button class="tool-btn" onclick="getNewWord()">
                        <i class="fas fa-sync-alt"></i> Nueva Palabra
                    </button>
                </div>
            `;
            document.getElementById('contentArea').innerHTML = speakHTML;
            getNewWord();
        }
        function showReadTool() {
            const data = levelData[currentLevel];
            const readHTML = `
                <div class="read-tool">
                    <h3>Lectura Comprensiva</h3>
                    <div class="reading-text">
                        ${data.sentences[0].english}<br><br>
                        ${data.sentences[1].english}<br><br>
                        ${data.sentences[2].english}
                    </div>
                    <button class="tool-btn" onclick="showVocabulary()">
                        <i class="fas fa-list"></i> Ver Vocabulario
                    </button>
                </div>
            `;
            document.getElementById('contentArea').innerHTML = readHTML;
        }
        function showVocabulary() {
            const data = levelData[currentLevel];
            let vocabHTML = '<h3>Vocabulario Clave</h3><div class="vocabulary-list">';
            for(let i = 0; i < data.words.length; i++) {
                vocabHTML += `
                    <div class="vocab-item">
                        <div class="vocab-word">${data.words[i]}</div>
                        <div class="vocab-meaning">${data.meanings[i]}</div>
                    </div>
                `;
            }
            vocabHTML += '</div>';
            document.querySelector('.read-tool').innerHTML = vocabHTML + 
                `<button class="tool-btn" onclick="showReadTool()">
                    <i class="fas fa-arrow-left"></i> Regresar a Lectura
                </button>`;
        }
        function showWriteTool() {
            const data = levelData[currentLevel];
            const prompt = data.writingPrompts[Math.floor(Math.random() * data.writingPrompts.length)];
            const writeHTML = `
                <div class="write-tool">
                    <h3>Escribir</h3>
                    <div class="exercise-prompt">${prompt}</div>
                    <textarea class="text-input" placeholder="Escribe aquí..."></textarea>
                    <button class="check-answer" onclick="checkWriting()">Verificar Respuesta</button>
                    <div id="writingFeedback"></div>
                </div>
            `;
            document.getElementById('contentArea').innerHTML = writeHTML;
        }
        function nextWord() {
            showListenTool();
        }
        function getNewWord() {
            const data = levelData[currentLevel];
            const randomIndex = Math.floor(Math.random() * data.words.length);
            document.getElementById('speakWord').textContent = data.words[randomIndex];
        }
        function startRecording() {
            const feedback = document.getElementById('recordingFeedback');
            feedback.className = 'feedback success';
            feedback.textContent = '🎤 Grabando... Di la palabra cuando estés listo!';
        }
        function checkWriting() {
            const textarea = document.querySelector('.text-input');
            const feedback = document.getElementById('writingFeedback');
            if(textarea.value.trim()) {
                feedback.className = 'feedback success';
                feedback.textContent = '¡Excelente! Has completado el ejercicio. Sigue practicando.';
                progress.exercisesCompleted++;
                updateProgress();
            } else {
                feedback.className = 'feedback error';
                feedback.textContent = 'Por favor, escribe algo antes de verificar.';
            }
        }
        function startGame(gameType) {
            alert(`Juego "${gameType}" iniciado! Esta función estará disponible en la próxima versión.`);
        }
        function updateProgress() {
            // Actualizar barra de progreso
            const progressPercent = Math.min(progress.exercisesCompleted * 5, 100);
            document.getElementById('progressFill').style.width = `${progressPercent}%`;
            document.getElementById('progressText').textContent = `Progreso: ${progressPercent}%`;
            // Actualizar estadísticas
            document.getElementById('wordsLearned').textContent = progress.wordsLearned;
            document.getElementById('exercisesCompleted').textContent = progress.exercisesCompleted;
            document.getElementById('accuracy').textContent = `${progress.accuracy}%`;
            document.getElementById('streak').textContent = progress.streak;
        }
        // Inicialización
        window.onload = function() {
            document.getElementById('mainContent').style.display = 'none';
            document.getElementById('gamesSection').style.display = 'none';
            document.getElementById('progressSection').style.display = 'none';
        };
    </script>
</body>
</html>
